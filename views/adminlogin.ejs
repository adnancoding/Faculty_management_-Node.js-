<title>
    Admin Login
</title>

<body>
<form action="/adminloggedin" method="post">
   <div class="root">
    <div class="subdiv">
    <div class="form-row">
      <div class="form-group col-md-4">  
          <div class="form-row">
            <div class="form-group col-md-12" style="display: flex; justify-content: center; flex-direction:column">
                <img src="/images/login.jpg" width="80">
                <div style="font-size: 24; font-weight: 700;">Administrator</div>
            </div>
            <div class="form-group col-md-12">
                 <label for="InputEmail14" style="font-size: 24; font-weight: 700;">Email address</label>
                 <input type="email" class="form-control" name="emailid"  placeholder="Enter email">
            </div>
            <div class="form-group col-md-12">
                <label for="InputEmail14" style="font-size: 24; font-weight: 700;">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">            
            </div>

            <div class="form-group col-md-12">
                <button style="font-size: 18; width: 100%; margin: top 30px; " type="submit" value="login" class="btn btn-primary" >login</button>

            </div>
            <div class="form-group col-md-12">
               <div style="font-size: 18px; font-weight:800; color:red; text-align: center;"><%=msg %></div>
            </div>

            </div>
        </div>

        <div class="form-group col-md-8">
            <img src="/images/college.png" width="700">
        </div>
        </div>



    </div>
    </div>

    </form>
